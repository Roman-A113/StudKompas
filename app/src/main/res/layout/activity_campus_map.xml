<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <com.example.studkompas.model.CustomPhotoView
        android:id="@+id/imageViewCampusMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-1dp"
        android:src="@drawable/guk_1" />

    <LinearLayout
        android:id="@+id/floorPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:elevation="4dp" >

        <Button
            android:id="@+id/btnFloor1"
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:backgroundTint="@color/green"
            android:text="1"
            android:textColor="#000000"
            android:textSize="20sp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/btnFloor2"
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:layout_margin="5dp"
            android:text="2"
            android:textSize="20sp"
            android:backgroundTint="@color/green"
            android:textColor="#000000"
            android:padding="0dp"
            app:cornerRadius="8dp"/>

        <Button
            android:id="@+id/btnFloor3"
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:layout_margin="5dp"
            android:text="3"
            android:textSize="20sp"
            android:textColor="#000000"
            android:backgroundTint="@color/green"
            android:padding="0dp"
            app:cornerRadius="8dp"/>

        <Button
            android:id="@+id/btnFloor4"
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:layout_margin="5dp"
            android:text="4"
            android:textSize="20sp"
            android:backgroundTint="@color/green"
            android:textColor="#000000"
            android:padding="0dp"
            app:cornerRadius="8dp"/>

        <Button
            android:id="@+id/btnFloor5"
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:layout_margin="5dp"
            android:text="5"
            android:textSize="20sp"
            android:backgroundTint="@color/green"
            android:textColor="#000000"
            android:padding="2dp"
            app:cornerRadius="8dp"/>


        <Button
            android:id="@+id/btnFloor6"
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:layout_margin="5dp"
            android:text="6"
            android:textSize="20sp"
            android:backgroundTint="@color/green"
            android:textColor="#000000"
            android:padding="2dp"
            app:cornerRadius="8dp"/>


        <Button
            android:id="@+id/btnFloor7"
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:layout_margin="5dp"
            android:text="7"
            android:textSize="20sp"
            android:backgroundTint="@color/green"
            android:textColor="#000000"
            android:padding="2dp"
            app:cornerRadius="8dp"/>

        <Button
            android:id="@+id/btnFloor8"
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:layout_margin="5dp"
            android:text="8"
            android:textSize="20sp"
            android:backgroundTint="@color/green"
            android:textColor="#000000"
            android:padding="2dp"
            app:cornerRadius="8dp"/>

        <Button
            android:id="@+id/btnFloor9"
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:layout_margin="5dp"
            android:text="9"
            android:textSize="20sp"
            android:backgroundTint="@color/green"
            android:textColor="#000000"
            android:padding="2dp"
            app:cornerRadius="8dp"/>

        <Button
            android:id="@+id/btnFloor10"
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:layout_margin="5dp"
            android:text="10"
            android:textSize="20sp"
            android:backgroundTint="@color/green"
            android:textColor="#000000"
            android:padding="2dp"
            app:cornerRadius="8dp"/>

    </LinearLayout>

</RelativeLayout>